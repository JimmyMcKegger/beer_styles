<section class="style-details pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <h1><%= pluralize(@users.size, "User") %></h1>
        <ul class="users">
          <% @users.each do |user| %>
          <li>
            <%= link_to(user.name, user) %>
            created
            <%= time_ago_in_words(user.created_at) %> ago
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>
