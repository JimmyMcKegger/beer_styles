<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <br>
  <% if current_user?(@user) %>
    <div class="action">
      <%= link_to "Edit account", edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "Delete account", @user, class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>


</section>
