<section class="style-details pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <h1><%= @user.name %></h1>
        <h2><%= mail_to(@user.email) %></h2>
        <br>

        <% if current_user?(@user) || current_user_admin? %>
          <% unless current_user?(@user) %>
            <div class="alert alert-warning" role="alert">
              You are viewing another user's account.
            </div>
          <% end %>

          <div class="action">
            <%= link_to "Edit account", edit_user_path(@user), class: "btn btn-primary" %>
            <%= link_to "Delete account", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
