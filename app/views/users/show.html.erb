<section class="user py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h1 class="mb-3"><%= @user.name %></h1>
        <h2 class="mb-4"><%= mail_to(@user.email, nil, class: "text-primary") %></h2>

        <% if current_user?(@user) %>
          <div class="action d-flex justify-content-center gap-2">
            <%= link_to "Edit account", edit_user_path(@user), class: "btn btn-primary" %>
            <%= link_to "Delete account", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
