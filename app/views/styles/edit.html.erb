<h1 class="mb-4">Editing <%= @style.name %></h1>

<%= form_with(model: @style, class: 'needs-validation', novalidate: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :fermentation_type, class: 'form-label' %>
    <%= f.text_field :fermentation_type, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :country, class: 'form-label' %>
    <%= f.text_field :country, class: 'form-control' %>
  </div>

  <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
<% end %>
