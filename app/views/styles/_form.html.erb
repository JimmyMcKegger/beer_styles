<section class="style-details pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">

        <%= form_with(model: style, class: 'needs-validation') do |f| %>

          <%= render "shared/errors", object: style %>

          <div class="mb-3">
            <%= f.label :category_id, class: 'form-label' %>
            <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category" }, { class: 'form-select' } %>
          </div>

          <div class="mb-3">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :bjcp_category, "BJCP Category", class: 'form-label' %>
            <%= f.text_field :bjcp_category, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_area :description, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :fermentation_type, class: 'form-label' %>
            <%= f.text_field :fermentation_type, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :country, class: 'form-label' %>
            <%= f.text_field :country, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :overall_impression, class: 'form-label' %>
            <%= f.text_area :overall_impression, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :aroma, class: 'form-label' %>
            <%= f.text_area :aroma, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :appearance, class: 'form-label' %>
            <%= f.text_area :appearance, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :flavor, class: 'form-label' %>
            <%= f.text_area :flavor, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :mouthfeel, class: 'form-label' %>
            <%= f.text_area :mouthfeel, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :history, class: 'form-label' %>
            <%= f.text_area :history, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :comments, class: 'form-label' %>
            <%= f.text_area :comments, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :vital_statistics, class: 'form-label' %>
            <%= f.text_area :vital_statistics, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :commercial_examples, class: 'form-label' %>
            <%= f.text_area :commercial_examples, class: 'form-control', rows: 3 %>
          </div>

          <div class="mb-3">
            <%= f.label :tags, class: 'form-label' %>
            <%= f.text_field :tags, class: 'form-control' %>
          </div>

          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
