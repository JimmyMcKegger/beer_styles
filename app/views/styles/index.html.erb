<div class="col-md-12 d-flex justify-content-center">
  <%= link_to 'American', american_styles_path, class: "btn btn-primary mx-1" %>
  <%= link_to 'Belgian', belgian_styles_path, class: "btn btn-primary mx-1" %>
  <%= link_to 'British', british_styles_path, class: "btn btn-primary mx-1" %>
  <%= link_to 'German', german_styles_path, class: "btn btn-primary mx-1" %>
  <%= link_to 'Historical beers', historical_styles_path, class: "btn btn-secondary mx-1" %>
  <%= link_to 'Todo', uncategorised_styles_path, class: "btn btn-info mx-1" %>

</div>

<div class="container mt-4">
  <br>
  <div class="row">
    <% @styles.each do |style| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= style.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= style.bjcp_category %></h6>
            <div class="mb-3">
              <% if style.fermentation_type.present? %>
                <% if style.fermentation_type == "Ale" %>
                  <span class="badge badge-ale"><%= style.fermentation_type %></span>
                <% elsif style.fermentation_type == "Lager" %>
                  <span class="badge badge-lager"><%= style.fermentation_type %></span>
                <% else %>
                  <span class="badge bg-success"><%= style.fermentation_type %></span>
                <% end %>
              <% end %>
              <% if style.country.present? %>
                <span class="badge bg-info"><%= style.country %></span>
              <% end %>
            </div>
            <p class="card-text"><%= truncate(style.overall_impression, length: 100, separator: ' ') %></p>
          </div>
          <div class="card-footer d-flex justify-content-center">
            <%= link_to 'View Style', style_path(style), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
